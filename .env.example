# RAYVEN Configuration (Example)
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git!

# Coinbase Advanced Trade API (CDP)
COINBASE_API_KEY_NAME="organizations/YOUR_ORG_ID/apiKeys/YOUR_KEY_ID"
COINBASE_PRIVATE_KEY="-----BEGIN EC PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END EC PRIVATE KEY-----"

# Optional: Google Sheets Logging
GOOGLE_SHEETS_CREDENTIALS="path/to/service_account.json"
SHEET_ID="your_sheet_id_here"

# Trading Configuration
INITIAL_CAPITAL=60.0
MAX_DAILY_LOSS_PERCENT=10.0
MAX_POSITION_SIZE_PERCENT=30.0

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
